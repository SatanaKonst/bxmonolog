{
    "type": "library",
    "name": "itrukhin/bxmonolog",
    "description": "Monolog logger for 1C-Bitrix",
    "keywords": ["bitrix", "bitrix-cms", "1c-bitrix","monolog", "logging"],
    "homepage": "https://github.com/itrukhin/bxmonolog.git",
    "license": "MIT",
    "authors": [{
        "name": "Ivan Trukhin",
        "email": "mail@itrukhin.ru",
        "homepage": "https://itrukhin.ru/"
    }],
    "require": {
        "php": "^7.1",
        "monolog/monolog": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
